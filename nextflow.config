params {
    input_vcf = null
    input_variant = null

    run_id = 1
    ref_ver = "hg19"
    ref_dir = null
    bed_filter = null
    exome_filter = false

    help = false
    version = false
}

docker.enabled = true

process {
    cpus = 2 
    memory = { 25.GB * task.attempt }
    errorStrategy = { task.exitStatus in [143,137,104,134,139,140] ? 'retry' : 'finish' }
    maxRetries = 5

    container = "zhandongliulab/aim-lite:1.1"
    cache = "lenient"
}

