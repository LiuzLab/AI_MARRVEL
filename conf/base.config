docker.enabled = true
docker.fixOwnership = true
docker.runOptions = '-u $(id -u):$(id -g)'

process {
    cpus = 2
    memory = { 25.GB * task.attempt }
    errorStrategy = { task.exitStatus in [143,137,104,134,139,140] ? 'retry' : 'finish' }
    maxRetries = 5

    container = "zhandongliulab/aim-lite:1.2"
    cache = "lenient"
}
