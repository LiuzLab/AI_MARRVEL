docker run -u $(id -u):$(id -g) \
        -v /home/zhijiany/work_dir/trio_test/AI_MARRVEL/test_data/chr2_joint.vcf.gz:/input/joint.vcf \
        -v /home/zhijiany/work_dir/trio_test/AI_MARRVEL/test_data/BCM427_HPO.txt:/input/hpo.txt \
        -v /home/zhijiany/work_dir/trio_test/AI_MARRVEL/test_data/trio.ped:/input/trio.ped \
        -v /home/zhijiany/work_dir/trio_test/triodocker_testoutput:/out \
        -v /home/sasidhar/1023:/run/data_dependencies \
        aim:trio /trio_pipeline/proc_trio.sh test185 hg38 20 True &> /home/zhijiany/work_dir/trio_test/AI_MARRVEL/test_data/full_logs.txt

